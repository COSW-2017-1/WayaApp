<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/colorPureWhite"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/layoutasd"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/coupon_discount"
                android:background="@drawable/coupon_discount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_height="50dp"
                android:textColor="#FFF"
                android:text="100%"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coupon_title"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@color/colorNeonBlueDark"
                    android:text="Titulo"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/colorDarkOrange"
                        android:text="@string/exp_date"/>

                    <TextView
                        android:id="@+id/exp_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text=" 11pm a 3am"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>