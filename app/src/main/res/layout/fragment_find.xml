<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">

    <LinearLayout
        android:layout_weight="1.1"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/tofavourites"
            android:layout_weight="1"
            android:src="@drawable/ic_hearth"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:layout_width="0px"
            android:background="@drawable/ripple_effect_primary_color"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/tocoupons"
            android:layout_weight="1"
            android:src="@drawable/ic_coupon"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:layout_width="0px"
            android:background="@drawable/ripple_effect_primary_color"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/toevents"
            android:layout_weight="1"
            android:layout_width="0px"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_event"
            android:background="@drawable/ripple_effect_primary_color"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tab_fragment_container"
        android:layout_weight="8.9"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:orientation="vertical"
        android:background="@color/colorBaseWhite">

    </LinearLayout>

</LinearLayout>